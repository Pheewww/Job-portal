model Job {
  id           Int      @id @default(autoincrement())
  title        String
  category     CategoryType  
  timezone     Timezone
  salary       SalaryRange
  type         JobType
  description  String
  companyName  String
  companyEmail String       @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Timezone {
  AFRICA
  ASIA
  AUSTRALIA
  EUROPE
  NORTH_AMERICA
  SOUTH_AMERICA
}


enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  FREELANCE
}


enum CategoryType {
    WEB_DEVELOPMENT
    DEVOPS
    WEB3
    FRONTEND
    BACKEND
}

enum SalaryRange {
  TEN_TO_TWENTY_FIVE_K
  TWENTY_FIVE_TO_FIFTY_K
  FIFTY_TO_SEVENTY_FIVE_K
  SEVENTY_FIVE_TO_HUNDRED_K
  HUNDRED_K_PLUS
  COMMISSION
}


